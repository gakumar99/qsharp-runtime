<Project Sdk="Microsoft.Quantum.Sdk/0.10.2003.903-alpha">

  <Import Project="..\..\Common\AssemblyCommon.props" />
  <Import Project="..\..\Common\DebugSymbols.props" />

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <QsharpDocsGeneration>true</QsharpDocsGeneration>
    <CsharpGeneration>false</CsharpGeneration> <!-- we will provide our own -->
    <IncludeQsharpCorePackages>false</IncludeQsharpCorePackages>
  </PropertyGroup>

  <PropertyGroup>
    <Authors>Microsoft</Authors>
    <Description>Support for Type 2 Q# circuit decompositions.</Description>
    <PackageReleaseNotes>See: https://docs.microsoft.com/en-us/quantum/relnotes/</PackageReleaseNotes>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/microsoft/qsharp-runtime</PackageProjectUrl>
    <PackageIconUrl>https://secure.gravatar.com/avatar/bd1f02955b2853ba0a3b1cdc2434e8ec.png</PackageIconUrl>
    <PackageTags>Quantum Q# Qsharp Decompositions</PackageTags>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
  </PropertyGroup>
  
  <ItemGroup>
    <Compile Include="..\..\Common\DelaySign.cs" Link="Properties\DelaySign.cs" />
  </ItemGroup>

  <ItemGroup>
    <QsharpCompile Include="..\Common\Decompositions.qs" />
    <QsharpCompile Include="..\Common\Utilities.qs" />
    <QsharpCompile Include="..\Common\CircuitUtilities.qs" />

    <QsharpCompile Include="..\..\QsharpCore\Diagnostics\AssertOperationsEqualInPlace.qs" />
    <QsharpCompile Include="..\..\QsharpCore\Diagnostics\AssertOperationsEqualReferenced.qs" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Core\Microsoft.Quantum.Runtime.Core.csproj" />
    <ProjectReference Include="..\..\QsharpBase\Microsoft.Quantum.QSharp.Base.csproj" />
    <ProjectReference Include="..\..\CsharpGeneration\Microsoft.Quantum.CsharpGeneration.fsproj" PrivateAssets="All" IsQscReference="true" />
  </ItemGroup>

  <Target Name="BeforeCsharpCompile">
    <ItemGroup>
      <Compile Include="$(GeneratedFilesOutputPath)**/*.g.cs" Exclude="@(Compile)" AutoGen="true" />
    </ItemGroup>
  </Target>  

</Project>
